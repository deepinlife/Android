<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backwallpaper"
    android:layout_height="match_parent"
    tools:context="com.deepinlife.med_det.HomePage">


    <Button
        android:id="@+id/capture"
        android:layout_width="320px"
        android:layout_height="600px"
        android:background="#006080"
        android:textColor="#ffffff"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:textSize="58px"

        android:text="Capture Text" />

    <Button
        android:id="@+id/medicine"
        android:layout_width="320px"
        android:layout_height="600px"
        android:background="#006080"
        android:textSize="58px"
        android:textColor="#ffffff"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/capture"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"

        android:text="Add Medicine" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:textAlignment="center"
        android:text="Medicine Name Detector"
        android:textSize="70px"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
