<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backwallpaper"

    tools:context="com.deepinlife.med_det.AddMedicine">


    <EditText
        android:id="@+id/mname"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Medicine Name"
        android:text=""
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp" />

    <Button
        android:id="@+id/msuccess"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="Add "
        android:textSize="23dp"
        android:textColor="#ffffff"
        android:background="#006080"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/description"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/description"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:inputType="textPersonName"
          android:hint="Description about medicine"
        android:layout_below="@+id/mname"
        android:layout_alignLeft="@+id/mname"
        android:layout_alignStart="@+id/mname" />
</RelativeLayout>
